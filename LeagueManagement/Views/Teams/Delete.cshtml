@model LMEntities.Models.Team

@{
    ViewBag.Title = "Delete";
}

<div class="col-md-8 col-sm-6 mininumheight">
    <div style="margin-top: 10px;" class="col-md-2 col-sm-9">
        @if (Model.PhotoUrl != null)
            {
            <img src="@Url.Content(Model.PhotoUrl)" alt="Image" style="height:150px;width:150px;" />
        }
    </div>

    <div id="loginbox" style="margin-top:10px;" class="mainbox col-md-9 col-md-offset-1 col-sm-9">
        <h1>Delete</h1>
        <h2>Are you sure you want to delete this Team?</h2>

        <br />
        <h2>Team Details</h2>
        <br />
        <form class="form-horizontal team">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-4 control-label">
                    @Html.DisplayNameFor(model => model.Name)
                </label>
                <div class="col-sm-8">
                    @Html.DisplayFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-4 control-label">
                    @Html.DisplayNameFor(model => model.NickName)
                </label>
                <div class="col-sm-8">
                    @Html.DisplayFor(model => model.NickName)
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-4 control-label">
                    @Html.DisplayNameFor(model => model.Description)
                </label>
                <div class="col-sm-8">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>           
        </form>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                
                    <div class="register">
                        @Html.ActionLink("Back", "Index")
                        <input type="submit" value="Delete" class="btn btn-default create" />
                    
                </div>
            </div>
        }
    </div>
</div>
@Html.Partial("_PartialStyle")