@model IEnumerable<LMEntities.Models.Team>

@{
    ViewBag.Title = "Index";
}


<div class="col-md-12 col-sm-12 mininumheight">
    <div class="table-responsive">
        <div class="col-md-12 col-sm-12 mininumheight">
            <div class="register">
                @Html.ActionLink("Add New Team", "Create", new { htmlAttributes = new { @class = "col-sm-12 control-label back" } })
            </div>
            <div class="table-responsive">
                <table class="table table-bordred table-striped">
                    <thead class="cf">
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NickName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.Name, "Details", "Teams", new {id = item.Id}, null)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NickName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td class="numeric">
                                    <a href="@Url.Action("Details", new {id = item.Id})">
                                        <i class="glyphicon glyphicon-eye-open btn btn-primary btn-xs"></i>
                                        <span class="sr-only">Details</span>
                                    </a>
                                    &nbsp;
                                    <a href="@Url.Action("Edit", new {id = item.Id})">
                                        <i class="glyphicon glyphicon-edit btn btn-primary btn-xs"></i>
                                        <span class="sr-only">Edit</span>
                                    </a>
                                    &nbsp;|
                                    <a href="@Url.Action("Delete", new {id = item.Id})">
                                        <i class="glyphicon glyphicon-trash btn btn-danger btn-xs"></i>
                                        <span class="sr-only">Delete</span>
                                    </a>
                                </td>
                            }

                            else
                            {
                                <td class="numeric">
                                    <a href="@Url.Action("Details", new {id = item.Id})">
                                        <i class="glyphicon glyphicon-eye-open btn btn-primary btn-xs"></i>
                                        <span class="sr-only">Details</span>
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
